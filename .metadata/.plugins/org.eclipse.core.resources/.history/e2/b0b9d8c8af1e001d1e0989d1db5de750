package URL;

import java.io.BufferedReader;
import java.io.IOException;
import java.io.InputStream;
import java.io.InputStreamReader;
import java.net.URL;
import java.net.URLConnection;

public class Ex03 {
	static URL url = null;
	static URLConnection conn = null;
	public static void main(String[] args) {
		try {
			url = new URL("https://www.naver.com");
			conn = url.openConnection(); //해당 url에서 페이지 정보를 가져오기 위해서 URLConnection을 사용

			System.out.println("content-encoding: "+conn.getContent());
			System.out.println("content-length: "+conn.getContentLength());
			System.out.println("content-inputstream: "+conn.getInputStream());
			System.out.println("url: "+conn.getURL());
			System.out.println("contentType: "+conn.getContentType());
			System.out.println("getDefaultUserCaches"+conn.getDefaultUseCaches());
		} catch (IOException e) {
			e.printStackTrace();
		}
		
	}
}
